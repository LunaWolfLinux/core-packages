package() {
	local hooks="$pkgdir"/usr/share/libalpm/hooks
	local pixmaps="$pkgdir"/usr/share/pixmaps
	local bin="$pkgdir"/usr/bin
	
	install -Dm 644 lunawolf-hooks.hook           	"$hooks"/lunawolf-hooks.hook
	install -Dm 644 lunawolf-lsb-release.hook      "$hooks"/lunawolf-lsb-release.hook
	install -Dm 644 lunawolf-os-release.hook       "$hooks"/lunawolf-os-release.hook
	install -Dm 644 lunawolf-reboot-required.hook  "$hooks"/lunawolf-reboot-required.hook
	install -Dm 644 lunawolf-pixmaps.hook  		"$hooks"/lunawolf-pixmaps.hook
			    
	install -Dm 755 lunawolf-hooks-runner         	"$bin"/lunawolf-hooks-runner
	install -Dm 755 lunawolf-reboot-required       "$bin"/lunawolf-reboot-required
			    
	install -Dm 644 lunawolf.png       			"$pixmaps"/lunawolf.png
	install -Dm 644 lunawolf.svg       			"$pixmaps"/lunawolf.svg
	install -Dm 644 lunawolf-logo.png       		"$pixmaps"/lunawolf-logo.png
	install -Dm 644 lunawolf-logo.svg       		"$pixmaps"/lunawolf-logo.svg
	install -Dm 644 lunawolf-user.png       		"$pixmaps"/lunawolf-user.png
	install -Dm 644 lunawolf-user.svg       		"$pixmaps"/lunawolf-user.svg
}
